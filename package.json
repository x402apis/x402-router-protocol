{
  "name": "@x402apis/protocol",
  "version": "1.0.1",
  "description": "Shared types and utilities for x402 API Router",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js"
    },
    "./types/chain": {
      "types": "./dist/types/chain.d.ts",
      "require": "./dist/types/chain.js",
      "import": "./dist/types/chain.js"
    },
    "./types/*": {
      "types": "./dist/types/*.d.ts",
      "require": "./dist/types/*.js",
      "import": "./dist/types/*.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "x402",
    "api",
    "router",
    "solana",
    "micropayments"
  ],
  "author": "x402apis",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/x402apis/x402-router-protocol"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ]
}
